{% extends 'base.html.twig' %}

{% block title %} Productos {% endblock %}

{% block body %}
    {% if products %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Código</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Marca</th>
                <th>Categoría</th>
                <th>Precio</th>
            </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <th>{{ product.code }}</th>
                    <th>{{ product.name }}</th>
                    <th>{{ product.description }}</th>
                    <th>{{ product.brand }}</th>
                    <th>{{ product.category_id }}</th>
                    <th>{{ product.price }}</th>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
