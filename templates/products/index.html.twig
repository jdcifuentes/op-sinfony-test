{% extends 'base.html.twig' %}

{% block title %} Productos {% endblock %}

{% block body %}
    <div class="row">
        <div class="col">
            <a href="{{ path('app_product_new') }}" class="btn btn-primary float-right">Nuevo producto</a>
        </div>
    </div>

    {% if products %}
        <div class="row mt-2">
            <div class="col">
                <table class="table table-striped" id="products">
                    <thead>
                    <tr>
                        <th>Código</th>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Marca</th>
                        <th>Categoría</th>
                        <th>Precio</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for product in products %}
                        <tr>
                            <th>{{ product.code }}</th>
                            <th>{{ product.name }}</th>
                            <th>{{ product.description }}</th>
                            <th>{{ product.brand }}</th>
                            <th>{{ product.category.name }}</th>
                            <th>{{ product.price }}</th>
                            <th>
                                <a href="{{ path('app_product_edit', { id: product.id } ) }}" class="btn btn-primary">Editar</a>
                                <a href="#" class="btn btn-danger delete-product" data-id="{{ product.id }}">Eliminar</a>
                            </th>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

    {% endif %}
{% endblock %}

{% block javascripts %}
    <script src="/js/main.js"></script>
{% endblock %}
